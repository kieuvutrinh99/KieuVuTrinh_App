<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/phongnen"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAME TRẮC NGHIỆM"
        android:textSize="30dp"
        android:typeface="serif"
        android:textStyle="italic|bold"
        android:textColor="#E11111"
        />
    <Button
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:id="@+id/btn_lichsu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LỊCH SỬ"
        android:background="@drawable/shape"
        />
    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/btn_vanhoa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="VĂN HÓA"/>
    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:id="@+id/btn_dichbenh"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="DỊCH BỆNH"/>
    <Button
        android:background="@color/teal_700"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trang chủ"
        android:id="@+id/back_home"/>
</LinearLayout>